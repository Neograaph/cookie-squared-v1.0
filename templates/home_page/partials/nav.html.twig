<nav id='haut'>
	<div class='navTopShadow'></div>
	<div class='navTop'>
		<a href="{{ path('home_page') }}">
			<img class='logoCS' src="{{ asset('build/images/Logo_cookie_squared.png') }}" alt="logo_cookie_squared">
		</a>
		<ul>
			<li>
				<a href="{{ path('home_page') }}#sectionrgpd">RGPD & ePrivacy</a>
			</li>
			<li>
				<a href="{{ path('home_page') }}#sectionprice">{% trans %}prices{% endtrans %}</a>
			</li>
			<li>
				<a href="{{ path('home_page') }}#sectionqsn">{% trans %}about{% endtrans %}</a>
			</li>
			<li>
				{% if app.user %}
