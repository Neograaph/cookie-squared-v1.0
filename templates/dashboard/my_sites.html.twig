{% extends 'dashboard_base.html.twig' %}

{% block body %}

	<!-- BEGIN: Content -->
	<div
		class="content">
		<!-- BEGIN: Top Bar -->
		<div
			class="top-bar">
			<!-- BEGIN: Breadcrumb -->
			<div class="-intro-x breadcrumb me-auto d-none d-sm-flex">
				<a href="">{% trans %}dashboard{% endtrans %}</a>
				<i data-feather="chevron-right" class="breadcrumb__icon"></i>
				<a href="" class="breadcrumb--active">{% trans %}mysites{% endtrans %}</a>
			</div>

			<div class="intro-x me-auto me-sm-6">
				<a href="{{ path('add_site') }}">
					<button class="btn btn-primary w-50 me-2 mb-2 mt-3">
						<i data-feather="plus-circle" class="w-4 h-4 me-2"></i>{% trans %}addsite{% endtrans %}</button>
				</a>
			</div>

			<div class="intro-x me-auto me-sm-6">
				<a href="{{ path("home_page") }}">
					<div class="cursor-pointer" role="button" aria-expanded="false">
						<i data-feather="home" class="notification__icon dark-text-gray-300"></i>
					</div>
				</a>
			</div>

		</div>


		<div class="grid columns-12 gap-6">
			<div class="g-col-12">
				<div class="grid columns-12 gap-6">
					<div class="g-col-12 mt-6 justify-content-center">
						<div class="intro-y overflow-auto overflow-lg-visible mt-8 mt-sm-0">
							<table class="table table-report mt-sm-2">
								<thead>
									<tr>
										<th class="text-nowrap text-center">{% trans %}namesite{% endtrans %}</th>
										<th class="text-nowrap text-center">{% trans %}datelastscan{% endtrans %}</th>
										<th class="text-nowrap text-center">TOKEN</th>
										<th class="text-nowrap text-center">{% trans %}status{% endtrans %}</th>
										<th class="text-nowrap text-center">{% trans %}actions{% endtrans %}</th>
									</tr>
								</thead>

								<tbody>

									{% for mysite in mysites %}

										<tr class="intro-x">
											<td>
												<div class="fw-medium text-nowrap text-center">{{ mysite.name }}</div>
												<div class="text-gray-600 fs-xs text-nowrap mt-0.5 text-center">{{ mysite.createdat|date("d/m/Y") }}</div>
											</td>

											<td>
												<div class="fw-medium text-nowrap text-center">{% if mysite.scanat is empty %}{% trans %}noscandone{% endtrans %}{% else %} {{ mysite.scanat|date("d/m/Y") }}{% endif %}</div>
											</td>

											<td>
												<div>{{ mysite.token }}</div>
											</td>

											<td>
												<div class="d-flex align-items-center justify-content-center text-theme-9">
													<svg class="feather feather-check-square w-4 h-4 me-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
														<polyline points="9 11 12 14 22 4"></polyline>
														<path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
													</svg>
													Active
												</div>
											</td>

											<td class="table-report__action w-56">
												<div class="d-flex justify-content-center align-items-center">
													<a class="d-flex align-items-center me-3" href="{{ path("custom") }}">
														<svg class="feather feather-check-square w-4 h-4 me-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
															<polyline points="9 11 12 14 22 4"></polyline>
															<path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
														</svg>
														{% trans %}edit{% endtrans %}
													</a>

													<a class="d-flex align-items-center text-theme-6" href="#">
														<svg class="feather feather-trash-2 w-4 h-4 me-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
															<polyline points="3 6 5 6 21 6"></polyline>
															<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
															<line x1="10" y1="11" x2="10" y2="17"></line>
															<line x1="14" y1="11" x2="14" y2="17"></line>
														</svg>
														{% trans %}delete{% endtrans %}
													</a>
												</div>
											</td>
										</tr>

									{% endfor %}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
