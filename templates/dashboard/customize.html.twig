{% extends 'dashboard_base.html.twig' %}

{% block body %}

{% include "dashboard/partials/side_menu_light.html.twig" %}

<div
  class="content">
  <!-- BEGIN: Top Bar -->
    <div class="top-bar">
      <!-- BEGIN: Breadcrumb -->
      <div class="-intro-x breadcrumb me-auto d-none d-sm-flex">
          <a href="{{ path('my_sites')}}">{% trans %}dashboard{% endtrans %}</a>
          <i data-feather="chevron-right" class="breadcrumb__icon"></i>
          <a href="" class="breadcrumb--active">{% trans %}customize{% endtrans %}</a>
      </div>
    </div>
    <h2 class='fs-3xl fw-medium lh-1 my-3'>{% trans %}customization{% endtrans %}</h2>
    <div class="intro-y box p-5">

    {{ form_start(custom) }}
    {{ form_row(custom.title, {
       'label': 'Titre du bandeau',
       'label_attr': {'class': 'fw-bold'},
       'attr': {'class': 'form-control' }
    }) }}
    {{ form_row(custom.message, {
      'label': 'Message du bandeau',
      'label_attr': {'class': 'fw-bold'},
      'attr': {'class': 'form-control'}
    }) }}
    <label class="my-3 fw-bold">Couleur du thème</label><br>
    <div class="">
    {{ form_widget(custom.color, { 
      'label_attr': {'class': 'form-check-label'},
      'attr': {'class': 'd-flex flex-column flex-sm-row mt-2'}
    }) }}
    </div>
    <label class="my-3 fw-bold">{% trans %}parameterswindowdisposition{% endtrans %}</label>
    {{ form_row(custom.layout, {
      'label_attr': {'class': 'form-check-label'},
      'attr': {'class': 'd-flex flex-column flex-sm-row mt-2'}
    }) }} <br>

      <button class="btn btn-secondary w-50 me-2 mb-2 mt-5">{% trans %}cancel{% endtrans %}</button>
      <button class="btn btn-primary w-50 me-2 mb-2 mt-5">{% trans %}record{% endtrans %}</button>
    {{ form_end(custom) }}

    <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#banner-modal-preview" class="text-theme-1 d-block fw-bold">{% trans %}previewconsentbanner{% endtrans %}</a>
    {# Modal #}
    <div id="banner-modal-preview" class="modal fade" tabindex="-1" aria-hidden="true">
     <div class="modal-dialog modal-xl">
        <div class="modal-content overflow-hidden">
          <iframe src="{{ path('view_banner', {id: site.id}) }}"></iframe>
        </div>
      </div>
    </div>

    <a href="{{ path('view_preferences', {id: site.id}) }}" data-bs-toggle="modal" data-bs-target="#preferences-modal-preview" class="text-theme-1 d-block fw-bold">Prévisualiser la fenètre de préférence</a>
    <div id="preferences-modal-preview" class="modal fade modal-dialog-scrollable" tabindex="-1" aria-hidden="true">
     <div class="modal-dialog">
        <div class="modal-content">
          <iframe src="{{ path('view_preferences', {id: site.id}) }}" style="height: 800px; width: 500px"></iframe>
        </div>
      </div>
    </div>
    {# End modal #}


      
    </div>

    

</div>
{% endblock %}